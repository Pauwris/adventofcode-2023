{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/js",
    "strict": true,
    "importHelpers": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
  },
  "exclude": [
    "node_modules"
  ]
}